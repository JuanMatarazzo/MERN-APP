{
  "compilerOptions": {
    // "target": "ES2020",
    // "useDefineForClassFields": true,
    // "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // "module": "ESNext",
    // "skipLibCheck": true,
 

    /* Compatible module resolution */
    "moduleResolution": "node", // Puedes usar 'node', 'classic', 'node16', o 'nodenext'
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // O "emitDeclarationOnly": true si quieres generar archivos de declaraci√≥n
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },


  "include": ["src"]
}
